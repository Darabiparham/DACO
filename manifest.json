  "shortcuts": [
    {
      "name": "ساخت استوری جدید",
      "short_name": "استوری جدید",
      "description": "شروع ساخت استوری جدید",
      "url": "./?action=new",
      "icons": [
        {
          "src": "./icons/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "گالری آثار",
      "short_name": "گالری", 
      "description": "مشاهده آثار ذخیره شده",
      "url": "./?action=gallery",
      "icons": [
        {
          "src": "./icons/shortcut-gallery.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "قالب‌ها",
      "short_name": "قالب‌ها",
      "description": "استفاده از قالب‌های آماده",
      "url": "./?action=templates", 
      "icons": [
        {
          "src": "./icons/shortcut-templates.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "./open",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp", ".bmp", ".svg"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+dacostory",
      "url": "./?story=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}